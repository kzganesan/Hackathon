<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@layout/scr_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/top_bar_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Login and share your griviences.."
            android:textColor="#ccc"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/blciti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:background="@layout/button_bg_2"
            android:paddingLeft="-8dp"
            android:paddingRight="-8dp"
            android:text="Citizen Login"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/blparty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@layout/button_bg_2"
            android:paddingLeft="-8dp"
            android:paddingRight="-8dp"
            android:text="Party Login"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:gravity="right"
            android:text="Need help? Click here"
            android:textColor="#ccc"
            android:textSize="12sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_height="161dp"
            android:src="@drawable/re_defemocracy" />

        </LinearLayout>
        </LinearLayout>
